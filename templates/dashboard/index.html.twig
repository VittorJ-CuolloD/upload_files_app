{% extends 'base.html.twig' %}

{% block title %}Subir imágenes{% endblock %}

{% block body %}
<ul class="nav justify-content-end">
  <li class="nav-item">
    <a class="nav-link" href="/dashboard/list">Lista de imágenes</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/logout">Cerrar sesión</a>
  </li>
</ul>
<div class="container h-100 d-flex justify-content-center mt-5">

<div class="w-75">
<h1 class="my-5 text-center">Bienvenido {{ app.user.email}} !</h1>
    {{ form(formulario) }}

    {% for message in app.flashes('success') %}
        <div class="flash-notice alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

</div>

</div>

{% endblock %}
